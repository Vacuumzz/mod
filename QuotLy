from .. import loader, utils
from telethon import events
from telethon.errors.rpcerrorlist import YouBlockedUserError


def register(cb):
    cb(NedoQuotesMod())
    
class NedoQuotesMod(loader.Module):
    """–ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä —Å—Ç–∏–∫–µ—Ä–æ–≤ —á–µ—Ä–µ–∑ @QuotLyBot"""
    strings = {'name': 'QuotLy'}

    async def qcmd(self, message):
        """–ò—Å–ø–æ–ª—å–∑—É–π: .q <—Ç–µ–∫—Å—Ç –∏–ª–∏ —Ä–µ–ø–ª–∞–π>."""
        chat = "@QuotLyBot"
        text = utils.get_args_raw(message)
        reply = await message.get_reply_message()
        if not text and not reply:
            await message.edit("<b>üõë –ù–µ—Ç —Ç–µ–∫—Å—Ç–∞ –∏–ª–∏ —Ä–µ–ø–ª–∞—è.</b>")
            return
        await message.edit("<b>‚è± –ú–∏–Ω—É—Ç–æ—á–∫—É...</b>")
        async with message.client.conversation(chat) as conv:
            if text:
                try:
                    response = conv.wait_event(events.NewMessage(incoming=True, from_users=1031952739))
                    await message.client.send_message(chat, text)
                    response = await response
                except YouBlockedUserError:
                    await message.edit("<b>üõë –†–∞–∑–±–ª–æ–∫–∏—Ä—É–π @QuotLyBot </b>")
                    return
            else:
                try:
                    user = await utils.get_user(reply)
                    response = conv.wait_event(events.NewMessage(incoming=True, from_users=1031952739))
                    await message.client.send_message(chat, f"{reply.raw_text} (—Å) {user.first_name}")
                    response = await response
                except YouBlockedUserError:
                    await message.edit("<b>üõë –†–∞–∑–±–ª–æ–∫–∏—Ä—É–π @QuotLyBot </b>")
                    return
        if response.text:
            await message.client.send_message(message.to_id, f"<b> {response.text}</b>")
            await message.delete()
        if response.media:
            await message.client.send_file(message.to_id, response.media, reply_to=reply.id if reply else None)
            await message.delete()
