from .. import loader, utils


def register(cb):
    cb(TagallMod())


class TagallMod(loader.Module):
    """ĞœĞ¾Ğ´ÑƒĞ»ÑŒ Ğ´Ğ»Ñ Ğ°Ğ²Ñ‚Ğ¾Ğ¸Ğ½Ğ²Ğ°Ğ¹Ñ‚Ğ°"""
    strings = {'name': 'MultiInvite'}

    async def acmd(self, event):
        """Ğ˜Ğ½Ğ²Ğ°Ğ¹Ñ‚ 1 (Ğ¿ĞµÑ€Ğ¼)"""
        await event.delete()
        global text
        text = """
ĞŸÑ€Ğ¸Ğ²ĞµÑ‚Ğ¸Ğºâ˜ºï¸â¤ï¸. Ğ¥Ğ¾Ñ‡Ñƒ Ğ¿Ğ¾Ğ·Ğ²Ğ°Ñ‚ÑŒ Ñ‚ĞµĞ±Ñ Ğº Ğ½Ğ°Ğ¼ Ğ² Ñ‡Ğ°Ñ‚ ğŸ–¤PERMAFIA
