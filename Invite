    async def prcmd(self, event):
        """ะะพะดัะปั ะดะปั ะฐะฒัะพะธะฝะฒะฐะนัะฐ ะฒ ัะฐัะฐั (1 ัะตะบัั)"""
        await event.delete()
        global text
        text = """
[ะะตัะตัะปะฐะฝะพ ะพั ๐ค ะะธะบะธัะฐ | ๐๐๐๐๐๐๐๐ ๐ฆ ๐ท๐บ]
